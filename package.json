{
  "name": "@averay/gulp-precompress",
  "author": "Adam Averay (https://adamaveray.com.au/)",
  "version": "1.0.1",
  "description": "A Gulp plugin to generate precompressed assets to avoid on-the-fly webserver compression.",
  "license": "MIT",
  "type": "module",
  "source": "./src/index.ts",
  "exports": "./dist/index.modern.mjs",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "unpkg": "./dist/index.umd.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "microbundle --target=node --tsconfig=tsconfig.build.json",
    "dev": "microbundle watch --target=node",
    "format": "npm run format:prettier && npm run format:eslint",
    "format:eslint": "eslint --fix .",
    "format:prettier": "prettier --write .",
    "lint": "npm run lint:prettier && npm run lint:eslint && npm run lint:typescript",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:typescript": "tsc --noEmit",
    "prepack": "npm run build",
    "prepare": "husky install",
    "test": "jest",
    "test+coverage": "jest --coverage"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "setupFilesAfterEnv": [
      "./test/lib/patch-jest.ts"
    ]
  },
  "devDependencies": {
    "@averay/codeformat": "^0.1.3",
    "@babel/preset-typescript": "^7.21.0",
    "@types/jest": "^29.4.0",
    "@types/vinyl": "^2.0.7",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "microbundle": "^0.15.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5",
    "vinyl": "^3.0.0"
  }
}
